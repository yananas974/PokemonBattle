# Variables d'environnement pour Pokemon Battle App
# Copiez ce fichier vers .env et remplissez vos vraies valeurs

# OpenWeatherMap API Key
# Obtenez votre clé gratuite sur : https://openweathermap.org/api
# 1000 appels/jour gratuits
OPENWEATHER_API_KEY=your_openweather_api_key_here

# JWT Secret pour l'authentification
# Génération recommandée : openssl rand -hex 32
JWT_SECRET=votre_cle_secrete_jwt_super_securisee_ici_123456789

# Configuration Base de données (optionnel, déjà dans docker-compose.yml)
DATABASE_URL=postgresql://pokemon_user:lOgan@localhost:5432/pokemon_battle
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pokemon_battle
DB_USER=pokemon_user
DB_PASSWORD=lOgan

# Configuration serveur
NODE_ENV=development
PORT=3001

# Configuration Docker
DOCKER_AUTO_SEED=true
FIRST_INSTALL_THRESHOLD=0
