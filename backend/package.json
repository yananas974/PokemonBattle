{
  "name": "pokemon-battle-backend",
  "version": "1.0.0",
  "description": "Pokemon Battle Backend with Hono",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "tsx src/index.ts",
    "db:reset": "tsx src/reset-db.ts",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:fresh": "npm run db:reset && npm run db:generate && npm run db:migrate",
    "db:init": "tsx scripts/init-db.ts",
    "seed": "tsx scripts/seed.ts",
    "seed:force": "npm run db:reset && npm run db:generate && npm run db:migrate && npm run seed"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "^0.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
